                  {% assign Tags = product.tags %}
                  <div>
                    <span><b>SKU:</b>
                      {% for variant in Skus %}
                        {{ variant.sku }}{% unless forloop.last %},{% endunless %}
                      {% endfor %}
                    </span>
                  </div>
                  <div>
                    <span><b>Category:</b>
                      {{ collection_name }}
                    </span>
                  </div>
                  <div>
                    <span><b>Tags:</b>
                      {% for tag in Tags %}
                        {{ tag }}{% unless forloop.last %},{% endunless %}
                      {% endfor %}
                    </span>
                  </div>
                  
                </div>
              {%- endif -%}

              {%- when 'image' -%}
