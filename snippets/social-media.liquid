{%- comment -%}
  Parameters:
  - class {String} - Custom class name(s) for the list element (optional).
  - icon {Object} - Custom icon object (optional).
  - icon_height {Number} - Custom icon height (optional, default is 24).

  Usage:
  {% render 'social-media',
  class: 'justify-center',
  icon: settings.social_custom_icon
  icon_height: 24
  %}
  {%- endcomment -%}{%- liquid
  if class
    assign class = class | prepend: ' '
  endif
-%}

  <ul class="social inline-flex flex-wrap{{ class }}">

