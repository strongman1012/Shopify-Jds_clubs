      <li>
        <a
          class="social__link flex items-center justify-center"
          href="{{ settings.social_instagram_url }}"
          target="_blank"
          rel="noopener">
          {%- render 'icon-instagram' -%}
          <span class="visually-hidden">Instagram</span>
        </a>
      </li>
    {%- endif -%}

